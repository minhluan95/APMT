@using Models

@model APMT_Project

@{
    Layout = null;
   
}
<div class="modal fade" tabindex="-1" role="dialog" id="myModalProject">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">APMT Project Information</h4>
            </div>
            <div class="modal-body">
                <div class="row primary box-body">
                    <div class="col-xs-12 col-lg-12 col-md-12 text-center"><h1>@Html.DisplayFor(model => model.Name)</h1></div>
                    <div class="col-xs-12 col-lg-12 col-md-12">
                        <div class="col-lg-3">
                            Project Name
                        </div>
                        <div class="form-group">
                            <div class="col-lg-8">
                                @Html.TextBoxFor(model => model.Name, new { id = "txtName", size = 50 })
                            </div>
                        </div>
                        <div class="col-lg-3">
                            Description
                        </div>
                        <div class="form-group">
                            <div class="col-lg-8">
                                @Html.TextAreaFor(model => model.Description, new { @id = "txtDes", rows = 5, cols = 49 })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-3">
                                <label for="exampleInputFile">Start Day:</label>
                            </div>
                            <div class="col-lg-8">
                                <input size="50" name="dtStartDay" value="model.StartDay.ToString()" data-provide="datepicker">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-3">
                                <label for="exampleInputFile">End Day:</label>
                            </div>
                            <div class="col-lg-8">
                                <input size="50" name="dtEndDay" value="model.EndDay.ToString()" data-provide="datepicker">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
